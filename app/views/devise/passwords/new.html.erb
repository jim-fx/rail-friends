<div class="w-min mx-auto">

  <h2 class="text-2xl bold">Forgot your password?</h2>

  <div class="p-4 rounded-xl bg-gray-100 w-min mb-4 mt-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group field">
        <label class="input-group">
          <span>Email</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input input-bordered" %>
        </label>
      </div>

      <div class="actions mt-4">
        <%= f.submit "Send me reset password instructions", class:"btn" %>
      </div>
    <% end %>

  </div>

<%= render "devise/shared/links" %>

</div>

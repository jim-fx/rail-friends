

<div class="flex justify-between items-center">
  <h1 class="font-bold text-4xl">Friends</h1>
  <%= link_to 'New friend', new_friend_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
</div>

<div class="overflow-x-auto mt-8">
  <table class="table table-zebra w-full">
    <!-- head -->
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Telephone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <!-- row 1 -->
      <%# <%= render @friends %>

      <% @friends.each do |friend| %>
        <tr>
          <th><%= friend.id %></th>
          <td><b><%= friend.first_name %> <%= friend.last_name %></b></td>
          <td><%= friend.phone %></td> 
          <td><%= friend.twitter %></td> 
          <td class="flex">
            <%= link_to edit_friend_path(friend), class: "btn mr-2 ml-auto" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <span class="ml-2">edit</span>
            <% end %>
              <%= button_to 'delete', friend_path(friend), method: :delete, class: "btn-error rounded-lg py-3 px-5 font-medium" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


